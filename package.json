{
  "name": "bookmark-manager",
  "version": "1.0.9",
  "description": "Advanced Bookmark Manager with Native App Launching",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "dist": "npm run build",
    "release": "electron-builder --publish=always",
    "release-mac": "electron-builder --mac --publish=always",
    "release-win": "electron-builder --win --publish=always",
    "release-linux": "electron-builder --linux --publish=always",
    "version": "echo $npm_package_version"
  },
  "keywords": [
    "bookmarks",
    "launcher",
    "productivity",
    "apps"
  ],
  "author": {
    "name": "Aaron Delia",
    "email": "maintainer@example.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "com.aarondelia.bookmark-manager",
    "productName": "Bookmark Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/index.html",
      "renderer/app.js",
      "renderer/styles.css",
      "renderer/service-worker.js",
      "assets/**/*",
      "!**/*.ts",
      "!**/*.map",
      "!**/*.md",
      "!**/node_modules",
      "!renderer/src/**/*",
      "!renderer/app-*.js",
      "!**/backup*",
      "!**/.*"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "compression": "maximum",
      "identity": null,
      "gatekeeperAssess": false
    },
    "win": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Aaron Delia",
      "compression": "maximum"
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Bookmark Manager"
    }
  }
}
